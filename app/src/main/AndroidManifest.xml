        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BarcodeScanner"/>
        <activity android:name=".Profile1"/>
        <activity android:name=".Profile2"/>
        <activity android:name=".Profile3"/>
        <activity android:name=".Profile3_sms"/>
        <activity android:name=".Profile3_call"/>
        <activity android:name=".Profile4"/>
        <activity android:name=".Profile4_sms"/>
        <activity android:name=".Profile4_call"/>


    </application>

</manifest>
